generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String      @id @default(uuid())
  email     String   @unique
  full_name      String
  password      String
  roles       Role[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // 관계: User creates Job (1:N)
  createdJobs Job[] @relation("JobCreator")

  // 관계: User applies JobApplication (1:N)
  jobApplications JobApplication[]

  // 관계: User has Sessions (1:N)
  sessions Session[]

  // 관계: User uploaded Photos (1:N)
  uploadedPhotos Photo[] @relation("UploadedPhotos")

  // 관계: User profile Photos (1:N)
  photos Photo[] @relation("UserPhotos")

  // 관계: User writes Reviews (1:N)
  reviewsGiven Review[] @relation("ReviewsGiven")

  // 관계: User receives Reviews (1:N)
  reviewsReceived Review[] @relation("ReviewsReceived")
}

enum Role {
  PetOwner
  PetSitter
  Admin
}


enum PriceType {
  hourly
  daily
}

model Job {
  id String @id @default(uuid())
  creator_user_id  String
  start_time DateTime
  end_time DateTime
  activity String
  address    String?
  latitude   Float?
  longitude  Float?
  price      Int?
  price_type PriceType?

  // 관계: Job belongs to User (N:1)
  creator User @relation("JobCreator", fields: [creator_user_id], references: [id])
  
  // 관계: Job contains Pets (1:N)
  pets Pet[]
  
  // 관계: Job has JobApplications (1:N)
  jobApplications JobApplication[]

  // 관계: Job has Photos (1:N)
  photos Photo[]

  // 관계: Job has Reviews (1:N)
  reviews Review[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Pet {
  id String @id @default(uuid())
  name String
  age Int
  species PetSpecies
  breed String
  size String?
  
  // 관계: Pet belongs to Job (N:1)
  job_id String
  job Job @relation(fields: [job_id], references: [id])

  // 관계: Pet has Photos (1:N)
  photos Photo[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum PetSpecies {
  Cat
  Dog
}

model JobApplication {
  id String @id @default(uuid())
  status ApproveStatus
  
  // 관계: JobApplication belongs to User (N:1)
  user_id String
  user User @relation(fields: [user_id], references: [id])
  
  // 관계: JobApplication belongs to Job (N:1)
  job_id String
  job Job @relation(fields: [job_id], references: [id])
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}


enum ApproveStatus {
  applying
  approved
  rejected
}

model Session {
  id String @id @default(uuid())
  user_id String
  auth_header String
  user User @relation(fields: [user_id], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Photo {
  id            String   @id @default(uuid())
  url           String
  file_name     String
  original_name String
  mime_type     String
  size          Int

  // 업로더
  uploader_id String
  uploader    User   @relation("UploadedPhotos", fields: [uploader_id], references: [id])

  // 연결 대상 (셋 중 하나만 설정)
  user_id String?
  user    User?   @relation("UserPhotos", fields: [user_id], references: [id])

  job_id String?
  job    Job?    @relation(fields: [job_id], references: [id])

  pet_id String?
  pet    Pet?    @relation(fields: [pet_id], references: [id])

  createdAt DateTime @default(now())
}

model Review {
  id          String  @id @default(uuid())
  rating      Int
  comment     String?

  // 작성자 (PetOwner 또는 PetSitter)
  reviewer_id String
  reviewer    User   @relation("ReviewsGiven", fields: [reviewer_id], references: [id])

  // 대상자 (PetSitter 또는 PetOwner)
  reviewee_id String
  reviewee    User   @relation("ReviewsReceived", fields: [reviewee_id], references: [id])

  // 관련 공고
  job_id String
  job    Job    @relation(fields: [job_id], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // 공고당 작성자 1인 1리뷰 (양방향 허용: PetOwner + PetSitter 각 1개)
  @@unique([job_id, reviewer_id])
}
