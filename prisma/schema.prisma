generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String      @id @default(uuid())
  email     String   @unique
  full_name      String
  password      String
  roles       Role[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // 관계: User creates Job (1:N)
  createdJobs Job[] @relation("JobCreator")
  
  // 관계: User applies JobApplication (1:N)
  jobApplications JobApplication[]
}

enum Role {
  OWNER
  SITTER
  ADMIN
}

model Job {
  id String @id @default(uuid())
  creator_user_id  String
  start_time DateTime
  end_time DateTime
  activity String
  
  // 관계: Job belongs to User (N:1)
  creator User @relation("JobCreator", fields: [creator_user_id], references: [id])
  
  // 관계: Job contains Dog (1:1)
  dog_id String @unique
  dog Dog @relation(fields: [dog_id], references: [id])
  
  // 관계: Job has JobApplications (1:N)
  jobApplications JobApplication[]
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Dog {
  id String @id @default(uuid())
  name String
  age Int
  breed String
  size String
  
  // 관계: Dog belongs to Job (1:1)
  job Job?
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model JobApplication {
  id String @id @default(uuid())
  status ApproveStatus
  
  // 관계: JobApplication belongs to User (N:1)
  user_id String
  user User @relation(fields: [user_id], references: [id])
  
  // 관계: JobApplication belongs to Job (N:1)
  job_id String
  job Job @relation(fields: [job_id], references: [id])
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}


enum ApproveStatus {
  COMPLETE
  PENDING
  CANCELLED
}

